<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/plivo_logo" />

    <Button
        android:id="@+id/answer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hangup_btn"
        android:layout_toLeftOf="@+id/imageView1"
        android:background="@drawable/answer_button"
        android:onClick="answerNow"
        android:enabled="false"
        android:text="@string/answer_now" />

    <Button
        android:id="@+id/hangup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_centerVertical="true"
        android:background="@drawable/hangup_button"
        android:enabled="false"
        android:onClick="hangupNow"
        android:text="@string/hangup_now" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/muteBtn"
        android:layout_alignTop="@+id/speaker"
        android:layout_alignLeft="@+id/hangup_btn"
        android:clickable="false"
        android:onClick="muteOn"
        android:textOff="Mute"
        android:textOn="Unmute"
        android:layout_alignRight="@+id/hangup_btn" />

    <ToggleButton        
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textOff="Speaker"
       android:textOn="Speaker Off"
       android:id="@+id/speaker"
       android:onClick="speakerOn"
       android:layout_marginTop="47dp"
       android:layout_below="@+id/call_btn"
       android:layout_centerHorizontal="true" />

</RelativeLayout>
